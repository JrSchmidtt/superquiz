<%- include ('./partials/header.ejs'); %>
<body>
    <%- include ('./partials/navbar.ejs'); %>
    <div class="container">
        <div class="card" id="formulario-pergunta">
            <div class="card-header">
                <h1> <%= pergunta.titulo %> </h1>
                <p> <%= pergunta.descricao %> </p>
                <form method="POST" action="/responder">
                    <hr>
                    <label>Responda:</label>
                    <textarea class="form-control" placeholder="Sua resposta" name="corpo"></textarea><br>
                    <input type="hidden" name="pergunta" value="<%= pergunta.id %>">
                    <button type="submit" class="btn btn-primary">Responder</button>
                </form>
                <hr>
                <h4>Respostas</h4>
                <% respostas.forEach(resposta => { %>
                    <div class="card"><br>
                        <div class="card-body">
                            <p><%= resposta.corpo %></p>
                        </div>
                    </div>
                <% }) %>

            </div>
        </div>
    </div>
</body>
<%- include ('./partials/footer.ejs'); %>